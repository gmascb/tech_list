<h1>Meus Produtos</h1>

<table class="centered responsive-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Shared</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.shared %></td>
        <td><%= product.category %></td>
        <td><%= link_to 'Escolher', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Excluir', product, method: :delete, data: { confirm: 'Tem certeza disso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

